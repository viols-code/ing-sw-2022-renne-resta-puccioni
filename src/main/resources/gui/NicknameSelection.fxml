<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.implementation.gui.controllers.NicknameSelection">
    <center>
        <VBox alignment="CENTER">
            <Label>Enter your username:
                <font>
                    <Font name="System Bold Italic" size="48.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="5.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </Label>
            <TextField fx:id="username" maxWidth="200">
                <font>
                    <Font size="15.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="choose" text="Choose" textFill="#5569b9">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Label fx:id="wrongNickname" visible="false">
            <font>
                <Font size="20.0"/>
            </font>
            </Label>
        </VBox>
    </center>
</BorderPane>
