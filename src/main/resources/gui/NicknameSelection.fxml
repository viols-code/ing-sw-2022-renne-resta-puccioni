<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.implementation.gui.controllers.NicknameSelection">
    <center>
        <VBox alignment="CENTER">
            <Label>Enter your username:</Label>
            <TextField fx:id="username" maxWidth="200">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin></TextField>
            <Button fx:id="choose">Choose</Button>
            <Label fx:id="wrongNickname" visible="false"/>
        </VBox>
    </center>
</BorderPane>
