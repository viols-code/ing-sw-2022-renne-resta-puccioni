            <Label text="Choose a game mode">
                <font>
                    <Font name="System Bold Italic" size="48.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="35.0" left="8.0" right="8.0" top="8.0"/>
                </VBox.margin>
            </Label>
            <RadioButton fx:id="basic" mnemonicParsing="false" onAction="#basic" text="Basic">
                <font>
                    <Font size="20.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="expert" mnemonicParsing="false" onAction="#expert" text="Expert">
                <font>
                    <Font size="20.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0"/>
                </VBox.margin>
            </RadioButton>
        </VBox>
    </center>
</BorderPane>
