<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.implementation.gui.controllers.Home">
    <top>
        <VBox alignment="CENTER">
            <Label text="Eriantys"/>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="720" alignment="CENTER">
            <Label>Enter the server ip and port:</Label>
            <TextField fx:id="serverIp" maxWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin></TextField>
            <Button fx:id="connect">Connect</Button>
            <Label fx:id="errorDisplay" visible="false" />
            <HBox.margin>
                <Insets left="20.0" right="20.0"/>
            </HBox.margin>
        </VBox>
    </center>
</BorderPane>