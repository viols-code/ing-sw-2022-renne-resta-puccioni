<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane styleClass="background" stylesheets="@css/style.css" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.view.implementation.gui.controllers.PlayersToStartSelection">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label text="Choose the number of players to start the game">
                <font>
                    <Font name="System Bold Italic" size="38.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="35.0" left="6.0" right="6.0" top="6.0"/>
                </VBox.margin>
            </Label>
            <RadioButton mnemonicParsing="false" onAction="#twoPlayersGame" text="2">
                <font>
                    <Font size="20.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" left="6.0" right="6.0" top="6.0"/>
                </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" onAction="#threePlayersGame" text="3">
                <font>
                    <Font size="20.0"/>
                </font>
            </RadioButton>
        </VBox>
    </center>
</BorderPane>
