<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root type="StackPane" stylesheets="@css/styleWidgets.css"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="it.polimi.ingsw.view.implementation.gui.widgets.NoColourWidget">
    <AnchorPane prefHeight="400.0" prefWidth="600.0">
        <Button layoutX="200.0" layoutY="55.0" mnemonicParsing="false" onAction="#showCharacterCards"
                text="Go back to Character Cards"/>

        <Label layoutX="229.0" layoutY="105" prefHeight="122.0" prefWidth="1080.0"
               text="Choose the colour you don't want to be considered during the influence computation:">
            <font>
                <Font name="System Bold Italic" size="22.0"/>
            </font>
        </Label>
        <FlowPane layoutX="509.0" layoutY="350.0" styleClass="colourSelected" prefWidth="60" prefHeight="60">
            <ImageView fx:id="blue" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../images/students/student_blue.png"/>
            </ImageView>
        </FlowPane>
        <FlowPane styleClass="colourSelected" prefWidth="60" prefHeight="60" layoutX="676.0" layoutY="250.0">
            <ImageView fx:id="green" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../images/students/student_green.png"/>
            </ImageView>
        </FlowPane>
        <FlowPane styleClass="colourSelected" prefWidth="60" prefHeight="60" layoutX="844.0" layoutY="350.0">
            <ImageView fx:id="red" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../images/students/student_red.png"/>
            </ImageView>
        </FlowPane>
        <FlowPane styleClass="colourSelected" prefWidth="60" prefHeight="60" layoutX="565.0" layoutY="500.0">
            <ImageView fx:id="yellow" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../images/students/student_yellow.png"/>
            </ImageView>
        </FlowPane>
        <FlowPane styleClass="colourSelected" prefWidth="60" prefHeight="60" layoutX="788.0" layoutY="500.0">
            <ImageView fx:id="pink" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@../images/students/student_pink.png"/>
            </ImageView>
        </FlowPane>

    </AnchorPane>
</fx:root>
